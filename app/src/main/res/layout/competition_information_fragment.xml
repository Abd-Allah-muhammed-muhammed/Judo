<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InformationFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout

                android:id="@+id/layout_one"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:orientation="horizontal">


                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/shap_oval_green">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="13dp"
                            android:src="@drawable/ic_appointment" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16dp"
                        android:layout_marginEnd="@dimen/_16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arabic_medium"
                            android:text="@string/date"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/course_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arabic_medium"
                            android:text="04 ابريل 2020"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout

                    android:layout_width="@dimen/_20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/shap_oval_green">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="13dp"
                            android:src="@drawable/ic_kimono" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16dp"
                        android:layout_marginEnd="@dimen/_16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arabic_medium"
                            android:text="@string/age"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/course_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arabic_medium"
                            android:text="24-16 سنة"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_2"
                android:layout_marginTop="@dimen/_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/shap_oval_green">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="13dp"
                        android:src="@drawable/ic_place_2" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16dp"
                    android:layout_marginEnd="@dimen/_16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arabic_medium"
                        android:text="@string/the_place_of_the_tournament"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arabic_medium"
                        android:text="@string/address"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_16dp"
                android:background="@color/white_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                android:text="@string/other_details"
                android:fontFamily="@font/arabic_semi_bold"
                android:textSize="@dimen/_16dp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginEnd="@dimen/_16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                android:text="@string/award_details"
                android:fontFamily="@font/arabic_regular"
                android:textSize="@dimen/_16dp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginEnd="@dimen/_16dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_16dp"
                android:background="@color/white_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:fontFamily="@font/arabic_semi_bold"
                android:text="@string/our_accounts"
                android:textColor="@color/black"
                android:textSize="@dimen/_16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_8"
                android:layout_marginBottom="@dimen/_16dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_height="wrap_content"
                android:text="@string/contact_us_by"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="@dimen/_16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_24"
                android:layout_marginEnd="@dimen/_24">
                <ImageView
                    android:layout_width="@dimen/_72"
                    android:layout_height="@dimen/_72"
                    android:src="@drawable/twitter"/>
                <ImageView
                    android:layout_width="@dimen/_72"
                    android:layout_height="@dimen/_72"
                    android:layout_marginStart="@dimen/_32"
                    android:layout_marginEnd="@dimen/_32"
                    android:src="@drawable/snap"/>
                <ImageView
                    android:layout_width="@dimen/_72"
                    android:layout_height="@dimen/_72"
                    android:src="@drawable/whatsapp"/>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24"
                android:layout_marginBottom="@dimen/_12dp"
                android:text="@string/or"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_gravity="center"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="@dimen/_20dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="@dimen/_24"
                app:cardElevation="0dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_call"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arabic_regular"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_8"
                        android:layout_marginEnd="@dimen/_8"
                        android:text="@string/calling"
                        android:textSize="14sp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </ScrollView>
</layout>
