<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="sections"
            type="com.example.judo.model.sections.SectionsInputModel" />

    </data>

    <LinearLayout

        android:id="@+id/layout_sections"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginTop="@dimen/_16dp"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_green_rectangle">


        <ImageView
            android:src="@{sections.logo}"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="44dp"
            android:layout_gravity="center"
            />

        <TextView


            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/arabic_medium"
            android:text="@{sections.title}"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/ic_arrow_section"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_arrow_small"
            android:layout_marginRight="14dp" />


    </LinearLayout>

</layout>
