<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="match_parent"
        tools:context=".ui.competitions.details.photos.show_photos.ShowPhotoActivity">




        <ImageView
            android:id="@+id/cancel_photos"
            android:layout_margin="@dimen/_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cancel"/>



        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_corner_radius="24dip"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_1"
            android:id="@+id/show_image"
            android:layout_below="@+id/cancel_photos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_56dp"
            android:transitionName="photo_comp"/>

    </RelativeLayout>

</layout>
