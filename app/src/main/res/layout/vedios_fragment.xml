<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.vedios.VediosFragment">


        <TextView
            android:id="@+id/new_videos"
            android:layout_marginEnd="@dimen/_16sp"
            android:layout_marginStart="@dimen/_16sp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الأحدث"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            android:fontFamily="@font/arabic_semi_bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_videos"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_below="@+id/new_videos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_vedios"
            />



    </RelativeLayout>

</layout>
