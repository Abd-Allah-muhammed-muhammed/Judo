<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NewsTextFragment">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_details"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/photo_3"
                android:transitionName="news_image"
                app:riv_corner_radius_bottom_left="7dp"
                app:riv_corner_radius_bottom_right="7dp" />

            <ImageView
                android:id="@+id/back_details"
                android:layout_width="28.8dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:layoutDirection="rtl"
                android:src="@drawable/ic_left"
                android:layout_marginLeft="16dp" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_details"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/arabic_bold"

                android:text="@string/test_titel_comp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/share"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="21dp"
                android:background="@drawable/shap_round"
                android:layout_marginLeft="21dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_share" />

            </RelativeLayout>


        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/description_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arabic_regular"
                android:text="@string/test_desc"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </ScrollView>

    </LinearLayout>
</layout>
